	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//or (gender == 2 | gender==4) 
		int gender =3;
		//gender 3인 경우 "남자 " 
		//gender 4인 경우 "여자" 
				
		if (gender ==2 | gender ==4) {
			System.out.println("여자");
		}
		else if (gender==1| gender ==3 ) {
			System.out.println("남자");
		}
					
	
		 else {
			 System.out.println("잘못입력");
		}
	}
}

